<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReportFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/report_fragment"
        android:weightSum="2">
        <TextView
            style="@style/heading_report_style"
            android:id="@+id/report_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/report_id_text"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/edit_text_report_style"
            android:id="@+id/report_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/report_id_text"
            app:layout_constraintStart_toStartOf="@+id/report_id_text"
            app:layout_constraintEnd_toEndOf="@+id/report_id_text"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/report_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/heading_report_style"
            android:id="@+id/construction_object_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/report_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/construction_object_text"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/edit_text_report_style"
            android:id="@+id/construction_object_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/construction_object_text"
            app:layout_constraintStart_toStartOf="@+id/construction_object_text"
            app:layout_constraintEnd_toEndOf="@+id/construction_object_text"
            android:hint="@string/construction_object_edit_text"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/construction_object_edit_text_for_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/button_gpoup"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/construction_object_edit_text">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <Button
                style="@style/button_style"
                android:id="@+id/buttonDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_date_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/buttonTime"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_time_text"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/date_text"
            style="@style/heading_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/button_gpoup"
            app:layout_constraintTop_toBottomOf="@+id/button_gpoup"
            android:text="@string/date_text"/>
        <TextView
            android:id="@+id/date_from_date_and_time"
            style="@style/edit_text_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/date_text"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            android:text="@string/from_date_text"/>
        <TextView
            android:id="@+id/time_text"
            style="@style/heading_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/time_from_date_and_time"
            app:layout_constraintTop_toBottomOf="@+id/button_gpoup"
            android:text="@string/time_text"/>
        <TextView
            android:id="@+id/time_from_date_and_time"
            style="@style/edit_text_report_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/button_gpoup"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            android:text="@string/from_time_text"/>

        <LinearLayout
            android:id="@+id/new_work_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="240dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_text" />

        <Button
            style="@style/button_style"
            android:id="@+id/button_add_new_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_new_work_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_work_recycler_view"/>
        <Button
            style="@style/button_style"
            android:id="@+id/button_add_new_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_new_report_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_add_new_work"/>

        <TextView
            style="@style/heading_report_style"
            android:id="@+id/foreman_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button_add_new_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/foreman_report_text"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/edit_text_report_style"
            android:id="@+id/foreman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/foreman_text"
            app:layout_constraintStart_toStartOf="@+id/foreman_text"
            app:layout_constraintEnd_toEndOf="@+id/foreman_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/foreman_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>